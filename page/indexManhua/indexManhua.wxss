/* page/indexManhua/indexManhua.wxss */
@import "../index/index.wxss";
@import '../indexPage/indexPage.wxss';
.search{
    width: 100%;
    height: 90rpx;
    background: #fa7b5a;
}
.search_fixed{
    position: fixed;
    top: 0
}
.inp_search{
    position: relative;
    top: 14rpx;
    width: 90%;
    border: 1px solid #eee;
    border-radius: 30rpx;
    font-size: 24rpx;
    height: 50rpx;
    padding:6rpx 12rpx;
    margin: 0 auto;
    outline: none;
    line-height: 58rpx;
    background:#fff;

}
.search_icon{
    position: absolute;
    z-index: 9999;
    top:25rpx;
    right: 50rpx; 
}

.mh_title{
    font-size: 30rpx;
    font-weight: bold;
    color: #000;
    padding: 4px 0px;
}
.mh_author_lates{
    font-size: 24rpx;
    color: #888;
    padding: 2px 0px;
}

.weight{
    font-weight: bold;
    color: #666;
}