/* page/contentManhua/contentManhua.wxss */

.list_parent{
   position: relative;
}
.list_bgImg{
    display: block;
    width: 100%;
    height: 320rpx;
     -webkit-filter: blur(10px);
     filter: blur(10px);
     
}
.list_Catalog{
    position: relative;
    display: flex;
    width: 696rpx;
    height: 268rpx;
    margin: 0 auto;
    top: -160rpx;
    left: 0;
    overflow:hidden;
    z-index: 9999;
    margin-bottom: -160rpx
}
.list_img{
    width: 192rpx;
    height: 268rpx;
    margin-right: 30rpx;
}

.list_text{
    color: white
}
.list_title{
    font-size: 40rpx;
    font-weight: bold;

}
.list_author{
    margin-top: 10rpx;
    font-size: 28rpx;
 

}

.list_click{
    width: 440rpx;
    height:75rpx;
    background: #fa7b5a;
    text-align: center;
    line-height: 75rpx;
    margin-top: 32rpx;
    font-size: 34rpx;
    border-radius: 4px
}
.list_contact{
    width: 696rpx;
    padding: 20rpx 27rpx;
    font-size: 30rpx;
}
.list_tab{
    overflow: hidden;
    margin-top:20rpx;
}
.tab_nav{
    width: 100%;
    height: 100rpx;
    display: flex;
    color: #333;
    background: #f7efe7;
}
.tab_title{
    width: 50%;
    height: 100rpx;
    display: block;
    line-height: 100rpx;
    text-align: center;
    border-bottom: 2px solid #eee;
}
.tab_active{

    border-bottom: 2px solid #fa7b5a;
}

.list_con{
    width: 696rpx;
    margin: 20rpx auto;
}
.con_Catalog{
    font-size: 28rpx;
    display: flex;
    -webkit-flex-direction: column;
    flex-direction: column;

 
}
.con_ser_par{
    padding: 14rpx 0;
    display: flex;
    justify-content:space-between;
}
.con_ser{
    color: #666;

}


.con_description{
    width: 100%;
    margin: 20rpx auto;
    font-size: 30rpx;
    line-height: 45rpx;
}

.bookmark{
    overflow: hidden;

}

.book_button{
    float: left;
    width:150rpx;
    height: 70rpx;
    border: 1px solid #888;
    border-radius: 6px;
    font-size: 14px;
    text-align: center;
    line-height: 70rpx;
    margin:0 10rpx 20rpx; 
}
.booK_this{
    background: #fa7b5a;
    color: #fff;
    border: 1px solid #fff;
}

.load_more{
    border-radius: 40rpx;
    border: 1px solid #989898;
    color: #999;
    padding: 14rpx 0;
    margin: 0 auto;
    width: 50%;
    height: 50rpx;
    text-align: center;
    line-height: 50rpx;
}



/* 图标 */
.list_author::before{
    font-size: 30rpx;
    content: '\e60c';

}
.list_author1::before{
    font-size: 26rpx;
    content: '\e619';

}

.icon0::after{
    content: '\e601';
}
.icon1::after{
    content: '\e6de';
}
.list_click::before{
    padding-right: 5px;
    content: '\e607';
}
.load_more::before{
    font-size: 28rpx;
    content: '\e618';
}
.load_more::after{
    font-size: 28rpx;
    content: '\e621';
}