/* page/contentPage/contentPage.wxss */

.con_body{
    width: 100%;
    overflow: hidden;
    background: white;
    padding: 30rpx;
    box-sizing: border-box;
}
.con_title{
    display: block;
    font-size: 34rpx;
}
.con_img{
    display: block;
    width: 100%;
    margin: 20rpx 0;
}
.con_but{
    display: flex;
    justify-content:space-around;
    align-items: center;
    line-height: 60rpx;
}
.button{
    display: block;
    font-size: 30rpx;
    background: #fa7b5a;
    text-align: center;
    color: white;
    border-radius: 4px;
}
.button:active{
    background: #fd714d
}
.prev{
    width:160rpx;
    height: 60rpx;
}
.next{
    width:160rpx;
    height: 60rpx;  
}

/* 满屏 */
.full{
    position: fixed;
    top: 0;
    left: 0;
    background: #000;
    width: 100%;
    height: 100%;
}
.full_img{
    display: block;
    width: 100%;
    height: 100%;
}