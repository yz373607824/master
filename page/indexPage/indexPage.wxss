@import "../index/index.wxss";

.tab_list{
    box-sizing: border-box;
    height:80rpx;
    background: white;
    text-align: center;
    font-size: 30rpx;
    line-height: 80rpx;
    display: flex;
    margin-top:1px;
}
.tab_title{
    width: 50%;
    height:80rpx;
}
.tab_active{
    border-bottom: 2px solid #fa7b5a;
}


/* 列表 list */
.list_box{
    display: flex;
    flex-wrap:wrap;
    font-size: 30rpx;
}
.list_block{
    width: 330rpx;
    height: 468rpx;
    background: white;
    margin-top: 30rpx;
    margin-left: 30rpx;
    text-align: center;
}
.list_img{
    display: block;
    width: 330rpx;
    height: 400rpx;
}
.list_title{
   line-height: 32rpx;
}

/* 返回顶部 */
.widget-goTop { 
  position: fixed; 
  bottom: 100px; 
  right: 5px; 
  background: rgba(0,0,0,0.48); 
  border-radius: 50%; 
  overflow: hidden; 
  z-index: 500; 
} 
.widget-goTop .gotop-wrap { 
  display:flex;
  flex-direction:column;
  align-items:center;
  justify-content:center;
  width: 50px; 
  height: 50px; 
  font-size: 12px; 
  color: #fff; 
  border-radius: 50%; 
  background-color: rgba(0,0,0,0.5); 
  -webkit-background-size: 50px auto; 
}


