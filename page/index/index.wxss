.wrap{
  height: auto;
  position: relative;  
}
 
.swipers{
    width: 100%;
  height: 436rpx; 
} 
.img{
    height: 436rpx;
    display:initial;
}
/*用来包裹所有的小圆点  */
.dots{  
  display: flex;
  flex-direction: row;
   position: absolute;
  left: 320rpx;
  bottom: 40rpx; 

}  
/*未选中时的小圆点样式 */
.dot{ 
  width: 20rpx;  
  height: 20rpx;   
  border-radius: 50%;
  margin:0 10rpx;
  background-color:rgba(250,250,250,0.5);
}  
/*选中以后的小圆点样式  */
.active{  
  width: 20rpx;   
  height: 20rpx;
  background-color: #fa7b5a;
}

.nav_par{
    position: relative;
    height: 120rpx;
    width: 100%;

}
.nav{
    position:absolute;
    overflow: hidden;
    height: 180rpx;
    width: 100%;
    top: -60rpx;
    left: 0;
    font-size: 24rpx;
    color: #58504e;
    display: flex;
    justify-content: center;
    text-align: center;


}

.nav_one{
    width: 130rpx;
    margin-top:60rpx;
    padding: 0 20rpx
}
.nav_img{
    width: 70rpx;
    height: 70rpx;
    display: block;
    margin: 2rpx auto;
}
.nav_text{
    overflow:hidden;
}



/* 热门 */
.Recommend{
    width: 100%;
    overflow: hidden;
}
.re_top{
    width: 100%;
    background: #fff;
    border: 1px solid #eee;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 10rpx 15rpx;
    box-sizing: border-box;
}
.re_title{
    display: block;
    width: 290rpx;
    height: 70rpx;
}
.more{
    font-size: 24rpx;
    border:1px solid #ddd;
    padding: 4rpx 12rpx;
    border-radius:20rpx;
}


.re_pro{
    width: 100%;
    overflow: hidden;
    display: flex;
    flex-wrap: wrap;
    text-align: center;
    padding-bottom: 20rpx;
    font-size: 24rpx;
}
.re_tor{
    width: 210rpx;
    height: 348rpx;
    background: white;
    margin-left: 30rpx;
    margin-top: 20rpx;
}
.re_img{
    display: block;
    width: 210rpx;
    height: 280rpx;
}
.re_name{
    display: -webkit-box;
    -webkit-line-clamp:2;
    -webkit-box-orient:vertical;
    overflow:hidden;
    text-overflow: ellipsis;
    padding: 4rpx 6rpx;
    word-spacing: 25px;
    letter-spacing: 2rpx;
    height: 60rpx;
    line-height: 32rpx;
}


/*底部buttom */
.buttom{
    font-size:24rpx;
    text-align:center; 
    margin:30rpx 0;
    color: #bbb
}
